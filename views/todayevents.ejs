<!-- page content -->

<div class="right_col" role="main">
  <div class="">



    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <span class="section">Liste des visites </span>

          <div class="x_content">

<div class="table-responsive">
<!--    <table class="table table-striped jambo_table bulk_action"> -->
  <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
    <thead>
      <tr class="headings">
        <th>
          <input type="checkbox" id="check-all" class="flat">
        </th>
        <th class="column-title">Nom Patient</th>
        <th class="column-title">Date RDV</th>

        <th class="column-title">Téléphone </th>

        <th class="column-title no-link last"><span class="nobr">Action</span>
        </th>
        <th class="bulk-actions" colspan="7">
          <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
        </th>
      </tr>
    </thead>

    <tbody>
      <% for(var i=0; i < events.length; i++) { %>
      <% if(events[i].start.substring(0,10) === datenow.substring(0,10)) {%>
      <tr class="even pointer">
        <td class="a-center ">
          <input type="checkbox" class="flat" name="table_records">
        </td>
        <td class=" "><%= events[i].title %></td>
        <td class=" "><%= "Aujourd'hui" + ' à ' + events[i].start.substring(11,16) %></td>

        <td class=" "><%= events[i].phone %></td>

        <td class=" last">
          <a class="" href="/editrdv/<%= events[i]._id %>" role="button"> Editer RDV </a>

        </td>
      </tr>
      <% } %>
    <% } %>
    </tbody>
  </table>
</div>

